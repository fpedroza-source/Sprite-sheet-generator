{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "DEBUG",
            "command": "gcc.exe",
            "args": [
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "D:\\Projetos\\SDL3\\include",
                "-L",
                "D:\\Projetos\\SDL3\\lib",
                "-lSDL3"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "RELEASE",
            "command": "gcc.exe",
            "args": [
                "-O2",
                "-Wall",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "D:\\Projetos\\SDL3\\include",
                "-L",
                "D:\\Projetos\\SDL3\\lib",
                "-lSDL3"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task without Debugger."
        }
    ],
    "version": "2.0.0"
}